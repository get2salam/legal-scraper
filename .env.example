# Legal Scraper Configuration
# Copy to .env and fill in your values

# Adapter credentials (varies by adapter)
ADAPTER_USER=your_username
ADAPTER_PASS=your_password

# Rate limiting
DAILY_REQUEST_LIMIT=500
MIN_DELAY_SECONDS=5
MAX_DELAY_SECONDS=20
READING_PAUSE_CHANCE=0.12
READING_PAUSE_MIN=30
READING_PAUSE_MAX=90

# Break settings
BREAK_AFTER_REQUESTS_MIN=22
BREAK_AFTER_REQUESTS_MAX=38
BREAK_DURATION_MIN=90
BREAK_DURATION_MAX=180

# Output settings
DATA_DIR=data
OUTPUT_FORMAT=both
